{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "_comment": "MCP Server Konfiguration für pump-server - Kopiere diese Datei nach ~/.claude/mcp_servers.json",

  "mcpServers": {
    "pump-server": {
      "transport": "sse",
      "url": "http://localhost:3003/mcp/sse",
      "name": "Pump Server ML Predictions",
      "description": "Pump Server für Kryptowährungs-Vorhersagen mit trainierten Machine Learning Modellen",

      "_tools_available": [
        "list_active_models - Liste aktiver ML-Modelle",
        "list_available_models - Verfügbare Modelle zum Import",
        "import_model - Modell vom Training-Service importieren",
        "get_model_details - Detaillierte Modell-Informationen",
        "activate_model - Pausiertes Modell aktivieren",
        "deactivate_model - Aktives Modell pausieren",
        "rename_model - Modell umbenennen",
        "delete_model - Modell und alle Predictions löschen",
        "update_model_metrics - Performance-Metriken aktualisieren",
        "predict_coin - ML-Vorhersage für einen Coin",
        "get_predictions - Historische Vorhersagen abrufen",
        "get_latest_prediction - Neueste Vorhersage für Coin",
        "get_model_predictions - Model-Predictions abrufen (neue Architektur)",
        "delete_model_predictions - Model-Predictions löschen",
        "reset_model_statistics - Modell-Statistiken zurücksetzen",
        "get_coin_details - Coin-Details mit Preishistorie und Evaluierungen",
        "update_alert_config - Alert-Konfiguration ändern",
        "get_model_statistics - Modell-Statistiken",
        "get_n8n_status - n8n Webhook-Status prüfen",
        "get_ignore_settings - Coin-Ignore-Einstellungen abrufen",
        "update_ignore_settings - Coin-Ignore-Einstellungen ändern",
        "get_max_log_entries - Max-Log-Entries-Einstellungen abrufen",
        "update_max_log_entries - Max-Log-Entries-Einstellungen ändern",
        "get_alerts - Alerts mit Filtern abrufen",
        "get_alert_details - Alert-Details mit Metriken und Chart-Daten",
        "get_alert_statistics - Alert-Statistiken",
        "get_all_models_alert_statistics - Alert-Statistiken aller Modelle",
        "delete_model_alerts - Alert-Evaluierungen löschen",
        "health_check - Service Health-Status",
        "get_stats - Umfassende Service-Statistiken",
        "get_system_config - Persistente Konfiguration abrufen",
        "update_configuration - Persistente Konfiguration speichern",
        "get_logs - Service-Logs abrufen",
        "restart_system - Service neu starten",
        "delete_old_logs - Alle alten Logs für ein Modell löschen",
        "migrate_performance_metrics - DB-Migration für Performance-Metriken",
        "debug_active_models - Debug: Alle aktiven Modelle",
        "debug_coin_metrics - Debug: Coin-Metriken Statistiken"
      ],

      "_endpoints": {
        "info": "http://localhost:3003/mcp/info",
        "health": "http://localhost:3003/mcp/health",
        "sse": "http://localhost:3003/mcp/sse"
      },

      "_setup_instructions": [
        "1. Stelle sicher dass pump-server läuft: docker-compose up -d",
        "2. Teste Verbindung: curl http://localhost:3003/mcp/info",
        "3. Kopiere diese Datei nach ~/.claude/mcp_servers.json",
        "4. Starte Claude Code neu",
        "5. Der MCP Server erscheint in der Tool-Liste"
      ]
    }
  }
}
